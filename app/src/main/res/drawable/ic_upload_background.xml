<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />

            <padding
                android:left="@dimen/margin_1"
                android:top="@dimen/margin_1"
                android:bottom="@dimen/margin_1"
                android:right="@dimen/margin_1" />

        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <size
                android:height="50dp"
                android:width="50dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/ic_add"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
</layer-list>