<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/parent.contentLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Final Exam"
                style="@style/viewParent.headerText" />

            <TextView
                android:text="Please get ready before start the exam!"
                style="@style/viewParent.headerText.contentText"
                android:layout_marginBottom="10dp"/>
            <View style="@style/proifleDetailsView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_empty"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="left"
                    android:text="1. What is a common cognitive change that may occur in a person with dementia?"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    style="@style/viewParent.headerText.HomeCardTitle" />


                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Difficulty with math"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Difficulty with cooking"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Difficulty with problem-solving"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>

            <View style="@style/proifleDetailsView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_empty"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="left"
                    android:text="2. How can you encourage a person with dementia to communicate?"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    style="@style/viewParent.headerText.HomeCardTitle" />


                <RadioGroup
                    android:id="@+id/radio_group2"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_button4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Speak loudly and quickly"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button5"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Make eye contact and use short sentences"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button6"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Interrupt them when they are speaking"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>
            <View style="@style/proifleDetailsView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_empty"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="left"
                    android:text="3. What is the importance of keeping a diary for 1 to 2 weeks in a person with dementia?"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    style="@style/viewParent.headerText.HomeCardTitle" />


                <RadioGroup
                    android:id="@+id/radio_group3"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_button7"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="To monitor their sleeping habits"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button8"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="To identify triggers for troubling behavior"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button9"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="To track their daily meals"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>
            <View style="@style/proifleDetailsView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_empty"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="left"
                    android:text="4. What are some psychological changes that may occur in a person with dementia?"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    style="@style/viewParent.headerText.HomeCardTitle" />


                <RadioGroup
                    android:id="@+id/radio_group4"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_button10"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Increased sociability"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button11"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Depression"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button12"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Improved memory"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>
            <View style="@style/proifleDetailsView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_empty"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="left"
                    android:text="5. What is the importance of remaining patient and calm when communicating with a person with dementia?"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    style="@style/viewParent.headerText.HomeCardTitle" />


                <RadioGroup
                    android:id="@+id/radio_group5"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_5"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_button13"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="It can help the person communicate more easily"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button14"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="It can help the person remember important details"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radio_button15"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="It can help the person focus on complex tasks"
                        android:textColor="@color/dark_blue"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>
            <View style="@style/proifleDetailsView" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_gradient3"
                android:paddingHorizontal="@dimen/margin_15"
                android:enabled="false"
                android:layout_gravity="center"
                android:text="@string/done"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
