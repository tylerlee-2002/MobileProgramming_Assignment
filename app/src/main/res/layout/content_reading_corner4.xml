<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/app_bar_reading_corner4"
    android:background="@drawable/background"
    style="@style/parent.contentLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent.headerText"
                android:text="Topic 4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="475dp"
                android:contentDescription="@string/topics_content"
                android:scaleType="centerInside"
                android:src="@drawable/topic_4" />

            <com.example.mobileprogramming_assignment.cairoButton
                android:id="@+id/id_done_Button"
                android:layout_marginTop="5dp"
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/width_50"
                android:layout_gravity="center"
                android:background="@drawable/ic_done_background"
                android:contentDescription="Done" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
