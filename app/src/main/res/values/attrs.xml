<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IconSwitch">
        <attr name="isw_icon_left" format="reference" />
        <attr name="isw_icon_right" format="reference" />
        <attr name="isw_icon_size" format="dimension" />
        <attr name="isw_background_color" format="color" />
        <attr name="isw_thumb_color_left" format="color" />
        <attr name="isw_thumb_color_right" format="color" />
        <attr name="isw_inactive_tint_icon_left" format="color" />
        <attr name="isw_inactive_tint_icon_right" format="color" />
        <attr name="isw_active_tint_icon_left" format="color" />
        <attr name="isw_active_tint_icon_right" format="color" />

        <attr name="isw_default_selection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="cairoTextView">
        <attr name="cairoText" format="string" />
    </declare-styleable>

    <declare-styleable name="GradientLayout">
        <attr name="start_color" format="reference" />
        <attr name="end_color" format="reference" />
        <attr name="radius_corner_top_left" format="float" />
        <attr name="radius_corner_top_right" format="float" />
        <attr name="radius_corner_bottom_right" format="float" />
        <attr name="radius_corner_bottom_left" format="float" />
        <attr name="orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0"/>
            <enum name="TR_BL" value="1"/>
            <enum name="RIGHT_LEFT" value="2"/>
            <enum name="BR_TL" value="3"/>
            <enum name="BOTTOM_TOP" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="LEFT_RIGHT" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
    </declare-styleable>
</resources>